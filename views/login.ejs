<%- include('./partials/header.ejs')%>



<div class="container">

    <br>

    <h2> Bem-vindo de volta! : ) </h2>

    <br>
    
    <form action="/admin/authenticate" method="post">
        <div class="card">
            <div class="card-header">
                <h2 style="color: white;"> Faça login! </h2>
            </div>

            <div class="card-body">
                <input type="text" name="username" id="username" class="form-control" placeholder="Nome de Usuário">
            </div>
        </div>
        
        <br>
        <div class="card">
            <div class="card-header">
                <h2 style="color: white;"> Digite sua senha </h2>
            </div>
    
            <div class="card-body">
                <input type="password" name="password" id="password" class="form-control" placeholder="Senha">
            </div>
        </div>
        <button type="submit" class="btn btn-success">
            Faça Login
        </button>
    </form>
</div>

<style>
    body{
        background-color: #05011b;
    }

    .card{
        background-color: #05011b;
        border: 1 solid #eee;
        border-radius: 1rem;
        color: #eee;
    }

    .card-header{
        background-color: #05011b;
        color: white;
    }

    .card-body{
        background-color: #05011b;
        color: #eee;
    }
</style>

