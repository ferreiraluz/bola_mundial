<%- include('../partials/header.ejs')%>


<div class="container">
    <h2>
        Bem-vindo! Faça leituras e revisôes sem moderação!
    </h2>

    <% articles.forEach(article => {  %>

        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>

            

            <div class="card-body">
                <a href="/admin/artigo/revisao/<%= article.slug %>" class="btn btn-success">
                    Ler Artigo
                </a>
            </div>
        </div>

        <br>
    <% }) %>
</div>

